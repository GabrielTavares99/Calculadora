<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:orientation="vertical">

        <TextView
            android:id="@+id/lbl_Valor1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="@string/lbl_Valor1"
            android:textSize="36sp" />

        <EditText
            android:id="@+id/txt_Valor1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="numberDecimal"
            android:numeric="integer|signed|decimal"
            android:selectAllOnFocus="true"
            android:textSize="36sp" />

        <TextView
            android:id="@+id/lbl_Valor2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="@string/lbl_valor2"
            android:textSize="36sp" />

        <EditText
            android:id="@+id/txt_Valor2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="numberDecimal"
            android:textSize="24sp" />

    </LinearLayout>

    <GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="3"
        android:orientation="vertical"
        android:rowCount="2">

        <Button
            android:id="@+id/btn_subtracao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/btn_subtracao"
            android:textSize="24sp"
            tools:text="@string/btn_subtracao" />

        <Button
            android:id="@+id/btn_multiplicacao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/btn_multiplicacao"
            android:textSize="24sp"
            tools:text="@string/btn_multiplicacao" />

        <Button
            android:id="@+id/btn_soma"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/btn_soma"
            android:textSize="24sp" />

        <Button
            android:id="@+id/btn_divisao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/btn_divisao"
            android:textSize="24sp"
            tools:text="@string/btn_divisao" />

        <Button
            android:id="@+id/btn_Limpar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/lbl_Limpar"
            android:textSize="24sp"
            tools:text="@string/lbl_Limpar" />

        <Button
            android:id="@+id/btn_igualdade"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/lbl_igualdade"
            android:textSize="24sp"
            tools:text="@string/lbl_igualdade" />
    </GridLayout>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="top|bottom|left|right|center_vertical|fill_vertical|center_horizontal|fill_horizontal|center|fill|clip_vertical|clip_horizontal|start|end"
        android:columnCount="3"
        android:foregroundGravity="top|bottom|left|right|center_vertical|fill_vertical|center_horizontal|fill_horizontal|center|fill|clip_vertical|clip_horizontal"
        android:orientation="horizontal"
        android:padding="auto"
        android:rowCount="4"
        android:textAlignment="gravity">


        <Button
            android:id="@+id/btn_num1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="0dp"
            android:layout_marginBottom="0dp"
            android:layout_marginEnd="0dp"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:layout_marginStart="0dp"
            android:layout_marginTop="0dp"
            android:text="@string/lbl_num1"
            android:textSize="24sp"
            tools:text="@string/lbl_num1" />

