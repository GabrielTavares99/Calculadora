            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:layout_marginStart="0dp"
            android:layout_marginTop="0dp"
            android:text="@string/lbl_num6"
            android:textSize="24sp"
            tools:text="@string/lbl_num6" />

        <Button
