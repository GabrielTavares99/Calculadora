<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:orientation="vertical">

        <TextView
            android:id="@+id/lbl_Valor1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="@string/lbl_Valor1"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/txt_Valor1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="numberDecimal"
            android:numeric="integer|signed|decimal"
            android:selectAllOnFocus="true"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/lbl_Valor2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="@string/lbl_valor2"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/txt_Valor2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="numberDecimal"
            android:textSize="18sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:columnCount="5"
            android:orientation="vertical"
            android:rowCount="3">


            <Button
                android:id="@+id/btn_num0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/lbl_num0"
                android:textSize="18sp"
                tools:text="@string/lbl_num0" />

            <Button
                android:id="@+id/btn_num1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/lbl_num1"
                android:textSize="18sp"
                tools:text="@string/lbl_num1" />

            <Button
                android:id="@+id/btn_num2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/lbl_num2"
                android:textSize="18sp"
                tools:text="@string/lbl_num2" />

            <Button
                android:id="@+id/btn_num3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/lbl_num3"
                android:textSize="18sp"
                tools:text="@string/lbl_num3" />

            <Button
                android:id="@+id/btn_num4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/lbl_num4"
                android:textSize="18sp"
                tools:text="@string/lbl_num4" />

            <Button
                android:id="@+id/btn_num5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/lbl_num5"
                android:textSize="18sp"
                tools:text="@string/lbl_num5" />

            <Button
                android:id="@+id/btn_num6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/lbl_num6"
                android:textSize="18sp"
                tools:text="@string/lbl_num6" />

            <Button
                android:id="@+id/btn_num7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/lbl_num7"
                android:textSize="18sp"
                tools:text="@string/lbl_num7" />

            <Button
                android:id="@+id/btn_num8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/lbl_num8"
                android:textSize="18sp"
                tools:text="@string/lbl_num8" />

            <Button
                android:id="@+id/btn_num9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/lbl_num9"
                android:textSize="18sp"
                tools:text="@string/lbl_num9" />

            <Button
                android:id="@+id/btn_virgula"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:freezesText="false"
                android:text="@string/virgula"
                tools:text="@string/virgula" />

        </GridLayout>

        <GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:columnCount="2"
            android:orientation="horizontal"
            android:rowCount="3">

            <Button
                android:id="@+id/btn_subtracao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/btn_subtracao"
                android:textSize="18sp"
                tools:text="@string/btn_subtracao" />

            <Button
                android:id="@+id/btn_multiplicacao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/btn_multiplicacao"
                android:textSize="18sp"
                tools:text="@string/btn_multiplicacao" />

            <Button
                android:id="@+id/btn_soma"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/btn_soma"
                android:textSize="18sp" />

            <Button
                android:id="@+id/btn_divisao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/btn_divisao"
                android:textSize="18sp"
                tools:text="@string/btn_divisao" />

            <Button
                android:id="@+id/btn_Limpar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/lbl_Limpar"
                android:textSize="18sp"
                tools:text="@string/lbl_Limpar" />

            <Button
                android:id="@+id/btn_igualdade"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/lbl_igualdade"
                android:textSize="18sp"
                tools:text="@string/lbl_igualdade" />
        </GridLayout>

    </LinearLayout>

</LinearLayout>